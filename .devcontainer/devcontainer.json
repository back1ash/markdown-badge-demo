{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {}
    },
    "postCreateCommand": "pip3 install --user -r requirements.txt && az extension add --name functionapp",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-azurefunctions",
                "GitHub.copilot",
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-powertoys"
            ]
        }
    },
    "forwardPorts": [
        7071
    ],
    "runArgs": []
}